<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/app_backsmall"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/aa"
                android:layout_width="@dimen/alert_logo_size"
                android:layout_height="@dimen/alert_logo_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/topMargin"
                android:background="@drawable/rounded_corner"
                android:src="@drawable/logo_app" />

        </RelativeLayout>


        <EditText

            android:id="@+id/resetPassAlertEt"
            style="@style/editTextStyle"
            android:drawableLeft="@drawable/mail_image"
            android:hint="User Email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/topMargin"
            android:layout_marginBottom="@dimen/bottomMargin"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/resetAlertBtn"
                style="@style/ButtonClick"
                android:layout_width="@dimen/button_widthLarge"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Reset Password" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>