<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_back"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginBottom="@dimen/topMargin"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/expertAllPrivateuHTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Pick Kitchen"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/headingTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expertAllPrivateuHTv"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/kitchenAlertRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/expertAllPrivateuHTv"
                android:layout_marginBottom="@dimen/bottomMargin">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/kitchenAlertProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/cencleAlertexpertAllHuBtn"
            style="@style/ButtonClick"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Cencel" />

    </RelativeLayout>
</LinearLayout>

