<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"

        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/proNameViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/proPriceViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/categoryProViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/statusViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/dateProViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />


            <TextView
                android:id="@+id/kitEmailProViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/textColor"
                android:textSize="@dimen/newContentSize" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>