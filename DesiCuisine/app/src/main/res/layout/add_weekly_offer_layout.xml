                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />

                        <EditText
                            android:id="@+id/day3B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day3L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
                            android:hint="Lunch"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day3D"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:gravity="center"
                            android:text="Day 4"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />

                        <EditText
                            android:id="@+id/day4B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day4L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
