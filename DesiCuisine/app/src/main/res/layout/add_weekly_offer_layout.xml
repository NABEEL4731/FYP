                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:gravity="center"
                            android:text="Day 5"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />

                        <EditText
                            android:id="@+id/day5B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day5L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
                            android:hint="Lunch"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day5D"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:gravity="center"
                            android:text="Day 6"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />


                        <EditText
                            android:id="@+id/day6B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day6L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
                            android:hint="Lunch"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day6D"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/topMargin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:gravity="center"
                            android:text="Day 7"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />

                        <EditText
                            android:id="@+id/day7B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day7L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
                            android:hint="Lunch"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day7D"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:imeOptions="actionDone"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/topMargin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/cencleButtonW"
                        style="@style/ButtonClick"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Cencel" />

                    <Button
                        android:id="@+id/addButtonW"
                        style="@style/ButtonClick"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="Add" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

