<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">


                <EditText

                    android:id="@+id/etOnameW"
                    style="@style/editTextStyle"
                    android:layout_marginBottom="@dimen/bottomMargin"
                    android:drawableLeft="@drawable/order_image"
                    android:hint="Menu Title"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName" />

                <EditText

                    android:id="@+id/etPriceW"
                    style="@style/editTextStyle"
                    android:layout_below="@id/etPNameADD"
                    android:layout_marginBottom="@dimen/topMargin"
                    android:drawableLeft="@drawable/currency_image"
                    android:hint="Price in Rupees "
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" />

                <!--
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:text="Offer Details"
                                    android:textColor="@color/textWhite"
                                    android:textSize="@dimen/newContentSize" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:gravity="center"
                            android:text="Day 1"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/newContentSize" />

                        <EditText
                            android:id="@+id/day1B"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/break_fast_image"
                            android:hint="Break Fast"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day1L"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/bottomMargin"
                            android:drawableLeft="@drawable/lunch_image"
                            android:hint="Lunch"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/day1D"
                            style="@style/editTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/dinner_image"
                            android:hint="Dinner"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


