<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_gravity="center_horizontal"
android:layout_height="wrap_content"
app:cardCornerRadius="8dp"
app:cardElevation="3dp"
app:cardUseCompatPadding="true"
app:contentPadding="@dimen/appPading">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/alert_logo_size"
        android:layout_height="@dimen/alert_logo_size"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:src="@drawable/logo_app" />


    <TextView
        android:id="@+id/alertTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Message"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/contentSize"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        >


        <Button
            android:id="@+id/noInternetAlertBtn"
            style="@style/ButtonClick"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OK" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>