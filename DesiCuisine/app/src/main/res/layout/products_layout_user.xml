<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backColor">


        <LinearLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgViewHolder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/loading_image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/proNameViewHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/newContentSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/proPriceViewHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1 "
                    android:text="Price"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textWhite"
                    android:textSize="@dimen/newContentSize"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/quantityViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Quantity"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/dateProViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="date"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/newContentSize" />

            <TextView
                android:id="@+id/cookNameViewHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Cook Name"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/newContentSize" />

            <LinearLayout
                android:id="@+id/layoutCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/appPading"
                android:weightSum="2">

                <Button
                    android:id="@+id/viewLocationAlertBtn"
                    style="@style/ButtonClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Location" />

                <Button
                    android:id="@+id/orderBtnViewHolder"
                    style="@style/ButtonClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Order Now" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/appPading"
                android:visibility="gone"
                android:weightSum="2">

                <Button

                    android:id="@+id/updateAlertBtnViewHolder"
                    style="@style/ButtonClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update" />

                <Button
                    android:id="@+id/deleteProductViewHolder"
                    style="@style/ButtonClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="Delete" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>