                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cook Name"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/newContentSize" />

                        <TextView
                            android:id="@+id/cookNameOrderViewHolder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cook Name"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/newContentSize" />

                    </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/dateOrderViewHolder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="date"
                android:textColor="@color/textWhite"
                android:textSize="@dimen/newContentSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:id="@+id/layoutLL"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/locationOrderViewHolder"
                style="@style/ButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="location" />

            <Button
                android:id="@+id/viewMenuViewHolder"
                style="@style/ButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Menu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/orderKitLayoutViewHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <Button
                android:id="@+id/rejectOrderViewHolder"
                style="@style/ButtonClick"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject" />

            <Button
                android:id="@+id/acceptOrderViewHolder"
                style="@style/ButtonClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>